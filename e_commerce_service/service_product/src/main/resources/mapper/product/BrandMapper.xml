<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.e_commerce.product.mapper.BrandMapper">
    <sql id="columns">
        id,
        name,
        logo,
        create_time,
        update_time,
        is_deleted
    </sql>

<!--    查询所有品牌-->
    <select id="selectAll" resultType="com.example.e_commerce.model.entity.product.Brand">
        select <include refid="columns"/>
        from brand
        where is_deleted = 0
        order by id desc
    </select>
</mapper>